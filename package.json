{
	"private": true,
	"name": "woovi-playground",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	},
	"scripts": {
		"commit": "git-cz",
		"check": "biome check --write --unsafe",
		"format": "biome check --write .",
		"build": "turbo run build",
		"start": "turbo run start",
		"config:local": "turbo run config:local",
		"dev": "turbo dev",
		"lint": "turbo run lint",
		"relay": "turbo run relay",
		"schema": "turbo run schema",
		"compose:up": "docker-compose -f docker-compose.yml up -d",
		"compose-down": "docker-compose -f docker-compose down",
		"test": "turbo run test"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.23.8",
		"@babel/preset-typescript": "^7.23.3",
		"@biomejs/biome": "^2.2.0",
		"@types/uuid": "^11.0.0",
		"autoprefixer": "^10.4.16",
		"babel-plugin-transform-barrels": "^1.0.10",
		"jest": "^29.7.0",
		"jest-junit": "^16.0.0",
		"lint-staged": "^16.2.6",
		"turbo": "latest"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --unsafe ."
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"packageManager": "pnpm@10.0.0",
	"dependencies": {
		"uuid": "^13.0.0"
	}
}
